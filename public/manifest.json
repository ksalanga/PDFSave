{
  "name": "PDF Save",
  "description": "Autosaves page position in Chrome/Brave PDF and bookmark PDFs.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "PDF Save"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "*://*/*.pdf",
    "file://*/*.pdf"
  ],
  "commands": {
    "save-at-page":
    {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Prompts extension to ask user to save currently viewed PDF at a defined page."
    }
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "./background/pdfTabs.js",
    "type": "module"
  }
}