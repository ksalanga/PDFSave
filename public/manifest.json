{
  "name": "PDF Save",
  "description": "Autosaves page position in Chrome/Brave PDF and bookmark PDFs.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "PDF Save"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "*://*/*.pdf",
    "file://*/*.pdf"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "./static/js/backgroundTab.js",
    "type": "module"
  }
}